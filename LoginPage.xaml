<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalWork.LoginPage"
             BackgroundColor="LightGray"
             Title="Вход / Регистрация">

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Имя пользователя" FontAttributes="Bold"/>
        <Entry x:Name="UsernameEntry" Placeholder="Введите имя" />

        <Label Text="Пароль" FontAttributes="Bold"/>
        <Entry x:Name="PasswordEntry" Placeholder="Введите пароль" IsPassword="True" />

        <Button Text="Войти" Clicked="OnLoginClicked" BackgroundColor="LightGreen"/>
        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" BackgroundColor="LightBlue"/>
    </VerticalStackLayout>

</ContentPage>
