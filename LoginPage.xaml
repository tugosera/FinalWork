<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalWork.LoginPage"
             BackgroundColor="LightGray"
             >

    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Username" FontAttributes="Bold"/>
        <Entry x:Name="UsernameEntry" Placeholder="insert name" />

        <Label Text="Password" FontAttributes="Bold"/>
        <Entry x:Name="PasswordEntry" Placeholder="insert password" IsPassword="True" />

        <Button Text="login" Clicked="OnLoginClicked" BackgroundColor="LightGreen"/>
        <Button Text="sign in" Clicked="OnRegisterClicked" BackgroundColor="LightBlue"/>
    </VerticalStackLayout>

</ContentPage>
