<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalWork.MainPage">

    <AbsoluteLayout>

        <!-- Верхняя левая кнопка -->
        <ImageButton
            x:Name="LeftTopButton"
            Clicked="OnLeftTopClicked"
            AbsoluteLayout.LayoutBounds="40, 120, 120, 100"
            AbsoluteLayout.LayoutFlags="None"
            Source="pudge.png"
            BackgroundColor="Transparent"
            Aspect="AspectFill" />

        <!-- Верхняя правая кнопка -->
        <ImageButton 
            x:Name="RightTopButton"
            Source="furion.png"
            Clicked="OnRightTopClicked"
            AbsoluteLayout.LayoutBounds="230, 120, 120, 100"
            AbsoluteLayout.LayoutFlags="None"
            Aspect="AspectFill" />

        <!-- Нижняя левая кнопка -->
        <Button 
            x:Name="BottomButton"
            Text="лулеул"
            Clicked="OnBottomClicked"
            AbsoluteLayout.LayoutBounds="40, 450, 120, 60"
            AbsoluteLayout.LayoutFlags="None" />

        <!-- Нижняя правая кнопка -->
        <Button 
            x:Name="RightBottomButton"
            Text="Избранные"
            Clicked="OnRightBottomClicked"
            AbsoluteLayout.LayoutBounds="230, 450, 120, 60"
            AbsoluteLayout.LayoutFlags="None" />


        <!-- Кнопка входа -->
        <ImageButton 
            x:Name="LoginButton"
            Source="login_icon.png"
            Clicked="OnLoginClicked"
            AbsoluteLayout.LayoutBounds="360, 40, 40, 40"
            AbsoluteLayout.LayoutFlags="None"
            BackgroundColor="White"
            CornerRadius="20"/>

        <!-- Кнопка выхода -->
        <Button
            x:Name="LogoutButton"
            Text="Logout"
            BackgroundColor="Red"
            TextColor="White"
            Clicked="OnLogoutClicked"
            AbsoluteLayout.LayoutBounds="360, 40, 80, 40"
            AbsoluteLayout.LayoutFlags="None"
            IsVisible="False" />

    </AbsoluteLayout>
</ContentPage>
