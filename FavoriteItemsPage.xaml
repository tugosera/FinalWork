<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalWork.FavoriteItemsPage"
             BackgroundColor="DimGray"
             Title="Избранные предметы">

    <Grid Padding="10" RowSpacing="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CollectionView x:Name="FavoriteItemsCollectionView"
                        ItemsLayout="VerticalGrid, 3"
                        SelectionMode="Single"
                        SelectionChanged="OnFavoriteItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="5" Margin="5" BackgroundColor="Transparent" HasShadow="False" CornerRadius="0">
                        <Image Source="{Binding IconUrl}"
                               Aspect="AspectFill"
                               WidthRequest="100"
                               HeightRequest="100" />
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
